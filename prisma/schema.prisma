// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String
  name       String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  tokens     tokens[]
  rents      rents[]
}

model tokens {
  id         String   @id @default(uuid())
  token      String   @unique
  user       users    @relation(fields: [userId], references: [id])
  userId     String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model rents {
  id           String   @id @default(uuid())
  monthly_cost Int
  currency     String
  bedrooms     Int
  bathrooms    Int
  square_feets Int
  image_url    String
  title        String
  description  String
  location     String
  latitude     Decimal
  longitude    Decimal
  rent         Boolean  @default(true)
  contact      String
  user         users    @relation(fields: [userId], references: [id])
  userId       String
  created_at   DateTime @default(now())
  updated_at   DateTime @default(now())
}
